<p id="notice"><%= notice %></p>


<div class="container-sm">


<h1 class="text-center">Amigos CRUD</h1>

<table class="table align-middle mb-0 bg-white">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>F. Nacimiento</th>
      
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.surname %></td>
        <td><%= friend.address %></td>
        <td><%= friend.date_of_birth %></td>
        <td><%= link_to friend do %> <button type="button" class="btn btn-primary"> <i class="bi bi-eye"></i> </button> <% end %></td>
        <td><%= link_to edit_friend_path(friend) do %> <button type="button" class="btn btn-warning"> <i class="bi bi-pencil-square"></i> </button> <% end %></td>
        <td> <%= link_to friend, method: :delete, data: { confirm: 'Â¿Estas seguro?' } do %> <button type="button" class="btn btn-danger"> <i class="bbi bi-trash3"></i> </button><% end %> </td>

      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to new_friend_path do %> <button type="button" class="btn btn-outline-primary"> <i class="bi bi-person-plus"></i> Nuevo Amigo </button> <% end %>

</div>